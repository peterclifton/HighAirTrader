<?xml version="1.0" encoding="UTF-8"?>
<!-- this file requires FlightGear version 2018.2 or newer -->
<PropertyList>
	<name>configs</name>
	<layout>vbox</layout>
	<width>300</width>

	<group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>HighAirTrader Configuration</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	<hrule />

	<combo>
		<halign>center</halign>
		<pref-width>160</pref-width>
		<property>/sim/highairtrader/configs/currency</property>
		<value>Dollars</value>
		<value>Pounds</value>
		<value>Euros</value>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</combo>

	<combo>
		<halign>center</halign>
		<pref-width>160</pref-width>
		<property>/sim/highairtrader/configs/freight-market</property>
		<value>Short-haul</value>
		<value>Long-haul</value>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</combo>

	<checkbox>
		<halign>center</halign>
		<label>Enable Leaderboard (Disables time speed-up)</label>
		<property>/sim/highairtrader/configs/leaderboard</property>
		<binding>
			<command>nasal</command>
			<script>
				if(getprop("/gear/gear/wow")) {
					setprop("/sim/highairtrader/configs/leaderboard", !getprop("/sim/highairtrader/configs/leaderboard"));
				  }
			</script>
		</binding>
		<live>true</live>
	</checkbox>

	<button>
		<legend>Close</legend>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>
</PropertyList>